<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flowerView"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="12dp"
    android:background="@drawable/searchflowerbackground">

    <ImageView
        android:id="@+id/flowerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/englishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Balloon Flower"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/latinName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/latinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.7"
        android:gravity="center"
        android:text="blalblslbs blslblslsll"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/sightingsBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/sightingsBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/sightings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="91"
        android:textColor="@color/white"
        android:textSize="9.6sp"
        app:layout_constraintBottom_toBottomOf="@id/sightingsBackground"
        app:layout_constraintLeft_toLeftOf="@id/sightingsBackground"
        app:layout_constraintRight_toRightOf="@id/sightingsBackground"
        app:layout_constraintTop_toTopOf="@id/sightingsBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>